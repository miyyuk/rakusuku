.look
  .looked-count
    = icon('fa', 'check')
    = "#{post.looked_count} 人"
  .look-btns
    - if current_user.already_looked?(post)
      = button_to '見ましたを解除', group_post_looks_path(@group, post), method: :delete, id: 'look-btn#{post.id}', class: 'look-btn'
    - else
      = button_to '見ました', group_post_looks_path(@group, post), id: 'look-btn#{post.id}', class: 'look-btn'