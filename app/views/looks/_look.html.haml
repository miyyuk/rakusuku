.look
  .looked-count
    = icon('fa', 'check')
    = "#{post.looked_count} 人"
  .look-btns
    - if current_user.already_looked?(post)
      = button_to '見ましたを解除', group_post_looks_path(@group, post), method: :delete, remote: true, id: 'look-btn', class: 'look-btn-destroy'
    - else
      = button_to '見ました', group_post_looks_path(@group, post), remote: true, id: 'look-btn', class: 'look-btn-create'
